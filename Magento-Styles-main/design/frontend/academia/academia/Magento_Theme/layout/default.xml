<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="welcome">
            <arguments>
                <argument name="show_part" xsi:type="string">welcome</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="footer" remove="true" />
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/witcher.png</argument>
                <argument name="logo_width" xsi:type="number">244</argument>
                <argument name="logo_height" xsi:type="number">57</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="footer-container">
            <block class="Magento\Cms\Block\Block" name="cms-footer">
                <arguments>
                    <argument name="block_id" xsi:type="string">Footer_Block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
